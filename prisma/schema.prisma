datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  notes   Note[]
  password String
}


model Note {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  title      String     
  content    String 
  published  Boolean    @default(false)
  authorId   Int        

  author     User       @relation(fields: [authorId], references: [id])
}